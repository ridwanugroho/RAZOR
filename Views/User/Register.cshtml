<h3><b>Register</b></h3>
<div>
    <form id="register-user" action="~/user/RegisterUser" method="post">
        <div class="form-group">
            <label for="username">Nama</label>
            <input name="username" type="text" class="form-control" id="username"placeholder="username">
        </div>
        <div class="form-group">
            <label for="email">Email </label>
            <input name="email" type="email" class="form-control" id="email"placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
        <div>
            <label for="authLevel">Pilih kegunaan</label>
            <select id="authLevel" name="authLevel" class="form-control">
                <option >Pilih</option>
                <option value="0">Pembeli</option>
                <option value="1">Penjual</option>
            </select><br>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

