@{
    ViewData["Title"] = "Product detail";
    ViewBag.Title = "Index";
}

<div class="text-center">
    @{
        var item = ViewBag.item;
    }
    <div class="row">
        <div class="column">
            <img src=@item.img_url class="img-grid">
        </div>
        <div class="column">
            <h4>@item.name</h4>
            <h5>Rp @item.price</h5>
            <h5>@item.desc</h5>
            <a class="btn btn-primary" href="https://localhost:5001/cart/add/@item.id">Add To Cart</a>
        </div>
    </div>
</div>
